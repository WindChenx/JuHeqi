<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wind.juheqi">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".SplashActivity"
            android:theme="@style/AppTheme.Pre_start">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>//指定应用的入口Activity
                <category android:name="android.intent.category.LAUNCHER"/>//表示该Activity被列入系统的启动器
            </intent-filter>


        </activity>

        <activity android:name=".AdsActivity"/>
        <activity android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            />
        <activity android:name=".SystemVideoPlayer" android:screenOrientation="landscape"/>
        <activity android:name=".Test"/>


    </application>

</manifest>